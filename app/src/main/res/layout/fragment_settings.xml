<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundocartao"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/btn_check_update"
                style="@style/WearButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/wear_button_background"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Verificar atualizações"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_clear_data"
                style="@style/WearButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/wear_button_background"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Limpar dados"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_clear_password"
                style="@style/WearButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/wear_button_background"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Limpar credenciais"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_github"
                style="@style/WearButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/wear_button_background"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="GitHub"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>