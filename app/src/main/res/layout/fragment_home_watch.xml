<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fundocartao"
    android:fitsSystemWindows="true">

    <!-- Container de Carregamento -->
    <FrameLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"
                app:indicatorColor="?attr/colorPrimary"
                app:trackColor="?attr/colorSurfaceVariant" />

            <TextView
                android:id="@+id/txtStuckHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Carregando..."
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:visibility="visible"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Conteúdo Principal -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Barra de Carregamento no Topo -->
            <LinearLayout
                android:id="@+id/top_loading_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center"
                android:background="@color/fundocartao"
                android:visibility="gone"
                tools:visibility="visible">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:indeterminate="true"
                    app:indicatorSize="18dp"
                    app:trackCornerRadius="9dp"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackColor="?attr/colorSurfaceVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Carregando dados..."
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- Últimas Notas -->
            <LinearLayout
                android:id="@+id/recentGradesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Tela Offline -->
    <LinearLayout
        android:id="@+id/layout_sem_internet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fundocartao"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sem conexão"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tentar_novamente"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TENTAR NOVAMENTE" />
    </LinearLayout>
</FrameLayout>